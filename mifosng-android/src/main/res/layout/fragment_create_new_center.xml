<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_center"
        style="@style/LinearLayout.Base"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView style="@style/TextView.CreateCenter" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/TextInput.Base">

            <EditText
                android:id="@+id/et_center_name"
                style="@style/EditText.BaseWidth"
                android:gravity="start"
                android:hint="@string/centername"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingBottom="16dp"
                android:singleLine="true" />

            <requestFocus />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_office"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/office_name_mandatory"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_center_offices"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray_dark"
                android:paddingTop="10dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_center_active_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:text="@string/center_active" />

        <LinearLayout
            android:id="@+id/layout_submission"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:baselineAlignBottom="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_event_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/center_activation_date"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_center_activationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_submissionCreateNewCenterDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_baseline_arrow_drop_down" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="8dp"
                android:background="@color/gray_dark" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            style="@style/Button.Base"
            android:layout_marginTop="10dp"
            android:text="@string/submit"
            android:background="@drawable/login_button_rounded"/>

    </LinearLayout>
</ScrollView>